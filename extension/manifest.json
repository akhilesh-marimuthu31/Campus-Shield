{
  "manifest_version": 3,
  "name": "CampusShield",
  "version": "0.2",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:5000/*"],
  "action": {
    "default_popup": "ui/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content_script.js"]
    }
  ]
}